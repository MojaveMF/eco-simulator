{
  "compilerOptions": {
    "outDir": "dist",
    "target": "ESNext",                                  
    "module": "commonjs",          
    "removeComments": true,                      
    "esModuleInterop": true,                             
    "forceConsistentCasingInFileNames": true,            
    "strict": true,                                      
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "noUnusedLocals": false,
    "noUnusedParameters": true,
    "noEmit": false,
    "moduleResolution": "Node"                              
  },
  "exclude": ["node_modules","dist"]
}